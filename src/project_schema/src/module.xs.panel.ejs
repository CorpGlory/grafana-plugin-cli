import { PanelCtrl } from 'grafana/app/plugins/sdk';

<%_ if(useStyles) { -%>
import './css/panel.base.css';
// Remove next imports if you don't need separate styles for light and dark themes
import './css/panel.dark.css';
import './css/panel.light.css';
// Remove up to here
<%_ } -%>

class Ctrl extends PanelCtrl {

  <%_ if(isTypeScript) { -%>
  private _panelPath: string;
  static templateUrl: string;
  <%_ } -%>

  constructor($scope<%= isTypeScript ? ': any' : '' %>, $injector<%= isTypeScript ? ': any' : '' %>) {
    super($scope, $injector);
  }

  link(scope<%= isTypeScript ? ': any' : '' %>, element<%= isTypeScript ? ': any' : '' %>) { }

  get panelPath() {
    if (this._panelPath === undefined) {
      this._panelPath = `/public/plugins/${this.pluginId}/`;
    }
    return this._panelPath;
  }

}

Ctrl.templateUrl = 'partials/template.html';

export { Ctrl as PanelCtrl }
